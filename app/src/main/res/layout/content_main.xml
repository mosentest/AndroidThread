<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.mo.androidthread.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <com.android.mo.view.HScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#cc33ff">

        <com.android.mo.view.DemoView
            android:id="@+id/demoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33999999"
            android:padding="10dp" />

        <com.android.mo.view.DemoView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33999999"
            android:padding="5dp" />
    </com.android.mo.view.HScrollView>


    <ImageView

        android:id="@+id/iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/drawable_bitmap" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/drawable_layer_list"
        android:padding="10dp" />
    <!--</ScrollView>-->


</LinearLayout>
